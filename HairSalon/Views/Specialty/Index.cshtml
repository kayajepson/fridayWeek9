@{
  Layout = "_Layout";
}

<h1>//SPECIALTIES//</h1>

@if (@Model.Count == 0)
{
  <h3>NO SPECIALTIES HAVE BEEN ADDED YET!</h3>
}

@foreach (var specialty in Model)
{
  <h3><a href='/specialties/@specialty.GetId()'>@specialty.GetName()</a></h3>
}

<a href="/specialties/new">ADD A SPECIALTY</a>

<p><a href='/'>BACK HOME</a></p>

<form action="/specialties/delete-all-specialties" method="post">
<button type="submit" name="button">DELETE ALL SPECIALTIES</button>
</form>
