@{
  Layout = "_Layout";
}

<h1>//STYLISTS//</h1>

@if (@Model.Count == 0)
{
  <h3>NO STYLISTS HAVE BEEN ADDED YET!</h3>
}

@foreach (var stylist in Model)
{
  <h3><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h3>
}

<a href="/stylists/new">ADD A STYLIST</a>
<form action="/stylists/delete-all-stylists" method="post">
<button type="submit" name="button">DELETE ALL STYLISTS</button>
</form>
<p><a href='/'>BACK HOME</a></p>
